<div class="bg-body-light sticky-top navbar-Tab">
  <nav class="navbar navbar-expand-md bg-body-light border-bottom">
    <div class="container-fluid">
      <a class="navbar-brand" style="color: #fe424d" href="/">
        <i class="fa-regular fa-compass"></i>&nbsp;&nbsp;TravelEase
      </a>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNavAltMarkup">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
        <div class="navbar-nav">
          <a class="nav-link explore" id="explore-link" href="/listings">Explore</a>
          <a class="nav-link" id="add-link" href="/listings/add">Add Listing</a>
        </div>
        
        <!-- Search Form -->
        <form class="d-flex mx-auto" action="/listings/search" method="GET">
          <div class="input-group my-0 py-md-0">
            <input type="search" name="q" class="form-control p-2 rounded-end-0 rounded-pill ps-md-3" placeholder="Search destinations..."
              required>
            <button class="btn btn-search rounded-start-0 rounded-pill" type="submit">
              <i class="fas fa-search px-1"></i>
            </button>
          </div>
        </form>

        <div class="navbar-nav ms-auto pt-md-0" style="padding-top: 0.4rem;">
          <% if (!currUser) { %>
            <div class="d-flex align-items-center gap-3">
              <a class="btn btn-outline-gradient fw-medium" href="/signup">SignUp</a>
              <a class="btn btn-gradient me-md-1 fw-medium" href="/login">Login</a>
            </div>
            <% } else { %>
              <div class="d-flex align-items-center gap-2">
                <a class="nav-link" id="user-link">@<%= currUser.username %></a>
                <a class="btn btn-outline-danger me-1 fw-medium" href="/logout">Logout</a>
              </div>
              <% } %>
        </div>

      </div>
    </div>
  </nav>

  <div class="fixed-category px-2 py-1">
    <%- include("../includes/category.ejs") %>
  </div>

</div>